@model ContasPagarViewModel
<!-- Content Wrapper. Contains page content -->
<style>
    label:not(.form-check-label):not(.custom-file-label) {
        text-align: right;
    }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Detalhes de Contas a Pagar</h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <span class="form-control">@Html.DisplayFor(model => model.Id)</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FornecedorId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                              <span class="form-control">@Html.DisplayFor(model => model.ResponseFornecedorOut.RazaoSocial)</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Descricao" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <span class="form-control">@Html.DisplayFor(model => model.Descricao)</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="DataVencimento" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <span class="form-control">@Html.DisplayFor(model => model.DataVencimento)</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Valor" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <span class="form-control">@Html.DisplayFor(model => model.Valor)</span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Situacao" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <span class="form-control">@Html.DisplayFor(model => model.Situacao)</span>
                        </div>
                    </div>
                </div>

                <!-- /.card-body -->
                <div class="card-footer">
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-controller="ContasPagar" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil-square btn btn-primary" aria-hidden="true" title="Editar"></i>
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-default float-right">Voltar</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
</div>
